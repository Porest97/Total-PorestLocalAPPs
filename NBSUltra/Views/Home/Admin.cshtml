@{
    ViewData["Title"] = "Administration Page";
}
<div class="card card-columns text-center" style="width: 50%">
    <div class="card-header">
        <h6>Administration</h6>
    </div>
</div>
<div class="card card-columns" style="width: 50%">
    <div class="card-header">
        <h6>User Administration</h6>
    </div>
    <div class="card-footer">
        <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-sm btn-outline-success">Go to Roles</a>
        - Administrate User Roles
    </div>
    <div class="card-footer">
        <a asp-action="ListUsers" asp-controller="Administration" class="btn btn-sm btn-outline-success">Go to Users</a>
        - Administrate Users
    </div>
</div>
<div class="card-header"style="width: 50%">
    <h6>Companies Register</h6>
</div>
<div class="card-footer"style="width: 50%">
    <a asp-action="Index" asp-controller="Companies" class="btn btn-sm btn-outline-success">Go to Companies</a>
    - Administrate Companies
</div>
<div class="card card-columns" style="width: 50%">
    <div class="card-header">
        <h6>Employees Register</h6>
    </div>
    <div class="card-footer">
        <a asp-action="Index" asp-controller="Employees" class="btn btn-sm btn-outline-success">Go to Employees</a>
        - Administrate Employees
    </div>
</div>
<div class="card card-columns" style="width: 50%">
    <div class="card-header">
        <h6>Orders Register</h6>
    </div>
    <div class="card-footer">
        <a asp-action="Index" asp-controller="Orders" class="btn btn-sm btn-outline-success">Go to Orders</a>
        - Administrate Orders
    </div>
</div>